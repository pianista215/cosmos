{
  "general": {
    "name": "crossdata-1",
    "cpus": 1,
    "instances": 0,
    "mem": 3584,
    "log_level": "INFO",
    "force_pull_image": false,
    "storage_path": "/tmp",
    "streams_parallelism": 2
  },
  "transport": {
    "server_request_timeout": "4h",
    "server_idle_timeout": "infinite",
    "http_connection_pool_idle_timeout": "infinite",
    "http_parsing_max_content_length": "1024m"
  },
  "security": {
    "enabled": true,
    "akka_in_cluster_security": false,
    "gosec_auth": true,
    "gosec_version": "0.11.1",
    "gosec_plugin_management_principal": "gosec-management",
    "gosec_plugin_sso_principal": "gosec-sso",
    "vault_host": "vault.service.paas.labs.stratio.com",
    "vault_port": 8200,
    "use_dynamic_authentication": true,
    "instance_app_role": "open",
    "crossdata_plugin_zk_connect": "gosec1.node.paas.labs.stratio.com:2181,gosec2.node.paas.labs.stratio.com:2181,gosec3.node.paas.labs.stratio.com:2181",
    "zk_watchers_enabled": true,
    "crossdata_plugin_ldap_host": "ldap.integration.labs.stratio.com",
    "crossdata_plugin_ldap_port": 636,
    "crossdata_plugin_ldap_user_domain": "ou=People,dc=stratio,dc=com",
    "crossdata_plugin_ldap_group_domain": "ou=Groups,dc=stratio,dc=com",
    "crossdata_cns_allowed": "crossdata-1",
    "crossdata_plugin_kafka_topic": "audit",
    "crossdata_plugin_kafka_bootstrap": "gosec1.node.paas.labs.stratio.com:9092,gosec2.node.paas.labs.stratio.com:9092,gosec3.node.paas.labs.stratio.com:9092",
    "enable_crossdata_plugin_cache": true,
    "crossdata_kerberos_renewal_interval": "4h",
    "ca-name-datastore": "ca"
  },
  "haproxy_http": {
    "enabled": true,
    "haproxy_group": "external",
    "external_port": 10069,
    "tunnel_timeout": "1500m"
  },
  "service_discovery": {
    "enabled": true,
    "zookeeper_connection_url": "zk-0001-zkuserland.service.paas.labs.stratio.com:2181,zk-0002-zkuserland.service.paas.labs.stratio.com:2181,zk-0003-zkuserland.service.paas.labs.stratio.com:2181",
    "interval_update": 120,
    "cluster-id": "crossdataAcceptance"
  },
  "zookeeper_catalog": {
    "enabled": true,
    "prefix": "crossdataAcceptance",
    "zookeeper_connection_url": "zk-0001-zkuserland.service.paas.labs.stratio.com:2181,zk-0002-zkuserland.service.paas.labs.stratio.com:2181,zk-0003-zkuserland.service.paas.labs.stratio.com:2181",
    "connection_timeout": 15000,
    "session_timeout": 60000,
    "retry_attempts": 2,
    "retry_interval": 10000
  },
  "spark": {
    "enabled": true,
    "spark_ui_enabled": false,
    "spark_master": "mesos://leader.mesos:5050",
    "spark_docker_image": "qa.stratio.com/stratio/stratio-spark:2.1.0.1",
    "spark_executor_home": "/opt/spark/dist",
    "spark_local_dir": "/tmp/spark_data",
    "spark_docker_volume_mount": "/var/lib/spark_data",
    "executor_memory": 512,
    "cores": 1,
    "shuffle_partitions": 200,
    "autobroadcast_join_threshold": 10485760,
    "broadcast_join_timeout": 300,
    "kryo_serializer_buffer_max": 256,
    "disable_hdfs_delegation_token_cache": true,
    "mesos_security_enabled": true,
    "mesos_role": "open"
  },
  "hdfs": {
    "hdfs_conf_url": "http://example.com/",
    "hadoop_security_auth": "kerberos",
    "hadoop_fs_name": "hdfs://10.200.0.74:8020",
    "hadoop_rpc_protection": "authentication",
    "hadoop_dfs_encrypt_data_transfer": true,
    "hadoop_security_token_use_ip": false,
    "hadoop_namenode_krb_principal": "hdfs/10.200.0.74@DEMO.STRATIO.COM",
    "hadoop_namnode_krb_principal_pattern": "hdfs/*@DEMO.STRATIO.COM",
    "hadoop_dfs_encrypt_data_transfer_cipher_suites": "AES/CTR/NoPadding",
    "hadoop_dfs_encrypt_data_transfer_cipher_key_bitlength": "128"
  },
  "network_segmentation": {
    "use_network_segmentation": true,
    "crossdata_network_name": "xd",
    "spark_network_name": "xdspark"
  }
}